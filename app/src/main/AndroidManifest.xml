<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bo.bumbay.qrinvoicereader">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:name="com.activeandroid.app.Application">

        <meta-data android:name="AA_DB_NAME" android:value="Invoices.db" />
        <meta-data android:name="AA_DB_VERSION" android:value="2" />
        <meta-data
            android:name="AA_MODELS"
            android:value="bo.bumbay.qrinvoicereader.entity.Invoice, bo.bumbay.qrinvoicereader.entity.InvoiceForm" />

        <activity
            android:name=".MainActivity"
            android:label="QR Invoice Reader">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="Settings"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".InvoicesActivity"
            android:label="Invoices"
            android:parentActivityName=".MainActivity"/>
    </application>

</manifest>